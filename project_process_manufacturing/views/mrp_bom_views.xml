<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_mrp_bom_form_inherit_routings" model="ir.ui.view">
        <field name="name">mrp.bom.form.view.routing</field>
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/group/group[2]/field[@name='code']"
                   position="after">
                <field name="routing_ids" widget="many2many_tags"/>
                <field name="raw_material_count"/>
            </xpath>
            <xpath expr="//sheet/notebook/page[1]/field[@name='bom_line_ids']/tree/field[@name='product_id']"
                   position="before">
                <field name='task_routing_ids' domain="[('id', 'in', parent.routing_ids)]"
                       options="{'no_create': True}" widget="many2many_tags"/>
            </xpath>
        </field>
    </record>
</odoo>
