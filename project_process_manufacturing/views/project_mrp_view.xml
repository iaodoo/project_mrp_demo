<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- inherited mrp order form view  -->
 
    <record id="view_stock_move_raw_tree_inherit" model="ir.ui.view">
        <field name="name">view_stock_move_raw_tree_inherit</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="mrp.view_stock_move_raw_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="part_number" attrs="{'column_invisible': [('parent.part_number','!=',False)]}" string="Part Number"/>
            </xpath>
        </field>
    </record>

    <record id="view_project_mrp_inherit" model="ir.ui.view">
        <field name="name">view.project_mrp_inherit</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date_deadline']" position="after">
                <field name="mail_date"/>
            </xpath>
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="product_description"
                       attrs="{'invisible': ['|', ('sale_order_line_id','=', False),
                       ('product_description', '=', False)]}"/>
                <field name="part_no_description"
                       attrs="{'invisible': ['|', ('sale_order_line_id','=', False),
                       ('part_no_description', '=', False)]}"/>
            </xpath>
            <xpath expr="//field[@name='bom_id']" position="after">
                <field name="task_id" readonly="1" force_save="1"
                       invisible="1"/>
                <field name="sale_type" attrs="{'readonly':[('state','!=','confirmed')]}"/>
                <field name="project_size_id" options="{'no_create': True}"
                       attrs="{'readonly':[('state','!=','confirmed')]}"/>


                <field name="project_id" readonly="1" force_save="1"/>
                <field name="project_title" readonly="1"/>
                <field name="part_number" readonly="1" attrs="{'invisible':[('part_number','=',False)]}" string="Part Number"/>
                <field name="sale_production_id" readonly="1" force_save="1"
                       invisible="1"/>
                <field name="sale_order_line_id" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='date_planned_finished']"
                   position="attributes">
                <attribute name="invisible">0</attribute>
                <attribute name="string">Due Date</attribute>
            </xpath>
            <xpath expr="//field[@name='bom_id']" position="after">
                <field name="priority" widget="priority"/>
            </xpath>
            <xpath expr="//button[@name='%(mrp.action_change_production_qty)d']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//header/button[@name='post_inventory']" position="attributes">
                <attribute name="groups"></attribute>
            </xpath>
            <xpath expr="//header/button[@name='action_cancel']" position="attributes">
                <attribute name="context">{'cancel_button_click': True}</attribute>
            </xpath>
            <xpath expr="//sheet/notebook/page[3]" position="after">
                <page string="Production Raw Material" invisible="1">
                    <field name="production_material_line_ids">
                        <tree>
                            <field name="production_id" invisible="1"/>
                            <field name="routing_id"/>
                            <field name="component_product_id"/>
                            <field name="material_product_id"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <record id="view_mrp_production_filter_inherited" model="ir.ui.view">
        <field name="name">mrp.production.select.inherit</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.view_mrp_production_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='filter_confirmed']" position="after">
                <filter string="Due Date"
                        domain="[('date_planned_finished', '&lt;', current_date)]"
                        name="date_planned_finished"
                        help="Production Due Date"/>
            </xpath>
            <xpath expr="//group/filter[@name='scheduled_date']"
                   position="after">
                <filter string="Due Date" name="date_planned_finished"
                        domain="[]"
                        context="{'group_by':'date_planned_finished'}"/>
            </xpath>
            <xpath expr="//group/filter[@name='date_planned_finished']"
                   position="after">
                <filter string="Priority" name="priority"
                        domain="[]"
                        context="{'group_by':'priority'}"/>
            </xpath>
            <xpath expr="//group/filter[@name='priority']"
                   position="after">
                <filter string="Project" name="project"
                        domain="[]"
                        context="{'group_by':'project_id'}"/>
            </xpath>
            <xpath expr="//group/filter[@name='priority']"
                   position="after">
                <filter string="Customer" name="customer"
                        domain="[]"
                        context="{'group_by':'partner_id'}"/>
            </xpath>
            <xpath expr="//group/filter[@name='customer']"
                   position="after">
                <filter string="Poject Name" name="project_title"
                        domain="[]"
                        context="{'group_by':'project_title'}"/>
            </xpath>

            <xpath expr="//group/filter[@name='project_title']"
                   position="after">
                <filter string="Manufacturing Order" name="manufacturing_order"
                        domain="[]"
                        context="{'group_by':'project_group_by_mo'}"/>
            </xpath>

        </field>
    </record>

    <record id="view_mrp_production_tree_inherited" model="ir.ui.view">
        <field name="name">mrp.production.tree.inherit</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="before">
                <field name="priority" widget="priority"/>
            </xpath>
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="project_id"/>
            </xpath>
             <xpath expr="//field[@name='project_id']" position="after">
                <field name="project_title"/>
            </xpath>
            <xpath expr="//field[@name='product_id']" position="before">
                <field name="partner_id" readonly="1"/>
            </xpath>
             <xpath expr="//field[@name='product_qty']" position="after">
                <field name="produced_qty"/>
            </xpath>
            <xpath expr="//field[@name='date_planned_start']" position="before">
                <field name="mail_date"/>
            </xpath>
            <xpath expr="//field[@name='project_id']" position="after">
                <field name="project_group_by_mo" invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>