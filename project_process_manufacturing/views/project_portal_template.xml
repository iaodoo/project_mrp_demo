<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="portal_my_tasks_dead_line" name="Portal layout: project menu entry" inherit_id="project.portal_my_tasks">
        <xpath expr="//t/t[4]/t/t/tbody/t/tr/td[1]" position="replace">
            <td>
                <t t-if="task.date_deadline and task.date_deadline &lt; datetime.datetime.today().date()">
                    <a t-attf-href="/my/task/#{task.id}?{{ keep_query() }}" style="color:#CC0000;"><span t-field="task.name"/></a>
                </t>
                <t t-else="">
                    <a t-attf-href="/my/task/#{task.id}?{{ keep_query() }}"><span t-field="task.name"/></a>
                </t>
            </td>
        </xpath>
    </template>
</odoo>