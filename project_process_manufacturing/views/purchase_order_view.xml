<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- Inherited Form View of Purchase Order -->
     <record id="inherited_task_form_view_purchase_order" model="ir.ui.view">
        <field name="name">inherited.task.form.view.purchase.order</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
           <xpath expr="//field[@name='company_id']" position="after">
                <field name="project_id" readonly="1" force_save="1" invisible="1"/>
           </xpath>
           <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="after">
                <field name="part_number" readonly="0" force_save="1" string="Part Number"/>
           </xpath>
       </field>
    </record>
</odoo>
