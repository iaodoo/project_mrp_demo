<?xml version="1.0"?>
<odoo>
    <record id="view_picking_saletype_form_inherit" model="ir.ui.view">
        <field name="name">stock.picking.saletype.form.inherit</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='picking_type_id']" position="after">
                <field name="sale_type" attrs="{'readonly':[('state','!=','draft')]}" string="Project Scope"/>
                <field name="project_size_id" attrs="{'readonly':[('state','!=','draft')]}"/>
            </xpath>
        </field>
    </record>
</odoo>